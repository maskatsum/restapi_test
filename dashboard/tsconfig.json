{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
      "outDir": "./build",
      "lib": [
        "ES2021"
      ],
      "strict": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "typeRoots": [
        "./node_modules/@types",
        "./node_modules/@jest"
      ],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "types": [
        "node"
      ],
      "resolveJsonModule": true,
      "moduleResolution": "nodenext",
      "baseUrl": ".",
      "paths": {
        "@settings/*": ["settings/*"],
        "@KeyCloakStrategy": ["key-cloak-strategy/index.ts"],
      },
      "removeComments": true,
      "isolatedModules": false,
      "plugins": [
        {
          "transform": "typescript-transform-paths"
        },
        {
          "transform": "typescript-transform-paths",
          "afterDeclarations": true
        }
      ]
    },
    "ts-node": {
      "transpileOnly": true,
      "require": [
        "typescript-transform-paths/register"
      ]
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }